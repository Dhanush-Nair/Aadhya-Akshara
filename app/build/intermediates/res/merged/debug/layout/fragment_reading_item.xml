<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/fragment_reading_item_cardview"
        card_view:cardCornerRadius="0dp"
        card_view:cardElevation="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/fragment_reading_item_row_relativelayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/fragment_relativelayout_padding_bottom"
            android:paddingLeft="@dimen/fragment_relativelayout_padding_left"
            android:paddingRight="@dimen/fragment_relativelayout_padding_right"
            android:paddingTop="@dimen/fragment_relativelayout_padding_top">

            <TextView
                android:id="@+id/fragment_reading_item_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sample reading dialog sentence. Long sentence."
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/primary_text"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_toLeftOf="@+id/fragment_reading_item_checkbox"/>

            <CheckBox
                android:id="@+id/fragment_reading_item_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/checkbox_button_tint"
                android:checked="false"
                android:clickable="false"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>