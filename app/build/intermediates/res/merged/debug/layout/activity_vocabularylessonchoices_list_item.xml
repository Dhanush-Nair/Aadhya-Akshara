<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/vocabularylessonchoices_list_cardview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/card_layout_margin_bottom_flat"
    android:orientation="vertical"
    card_view:cardCornerRadius="@dimen/card_corner_radius_flat"
    card_view:cardElevation="@dimen/card_elevation_flat">


    <RelativeLayout
        android:id="@+id/vocabularylessonchoices_list_row"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/fragment_relativelayout_padding_bottom"
        android:paddingLeft="@dimen/fragment_relativelayout_padding_left"
        android:paddingRight="@dimen/fragment_relativelayout_padding_right"
        android:paddingTop="@dimen/fragment_relativelayout_padding_top">

        <TextView
            android:text="1"
            android:textSize="24sp"
            android:id="@+id/vocabularylessonchoices_list_lesson_number"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginRight="16dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/circle_status_icon"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:id="@+id/vocabularlylessonchoices_list_title_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignTop="@+id/vocabularylessonchoices_list_lesson_number"
            android:layout_toRightOf="@+id/vocabularylessonchoices_list_lesson_number"
            android:layout_toEndOf="@+id/vocabularylessonchoices_list_lesson_number">

        <TextView
            android:id="@+id/vocabularylessonchoices_list_title_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title of Lesson"
            android:textColor="@color/textColorPrimary"
            android:textSize="@dimen/primary_text"/>

        <TextView
            android:id="@+id/vocabularylessonchoices_list_english_title_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vocabularylessonchoices_list_title_textview"
            android:text="English Title of Lesson"
            android:textColor="@color/textColorSecondary"
            android:textSize="@dimen/secondary_grey_text"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/vocabularylessonchoices_list_status_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>